{% liquid
  assign sid = section.id
  assign bs = section.settings
  assign left = bs.left
  assign right = bs.right
%}

<style>
  #shopify-section-{{ sid }} .rich-text-left-right {
    display: grid;
    grid-template-columns: 1fr 1fr;
    column-gap: 80px;
    text-align: justify;
    padding: 60px 0;
  }
</style>

<div class="rich-text-left-right container container--sm">
  {% if left != blank %}
    <div class="rich-text-left">
      {{ left }}
    </div>
  {% endif %}
  {% if right != blank %}
    <div class="rich-text-right">
      {{ right }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Rich text Left Right",
  "settings": [
    {
      "type": "textarea",
      "id": "left",
      "label": "Left"
    },
    {
      "type": "textarea",
      "id": "right",
      "label": "Right"
    }
  ]
}
{% endschema %}
