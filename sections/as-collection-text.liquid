


{% liquid
  assign name = 'as-collection-text'
  assign heading = section.settings.heading
  assign container_width = section.settings.container_width
%}

{%- style -%}
  as-collection-text .text-container a{
    text-decoration: underline;
  }
  .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      }

      @media screen and (min-width: 768px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top_table }}px;
        padding-bottom: {{ section.settings.padding_bottom_table }}px;
      }
    }

      @media screen and (min-width: 1024px) {
        .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top_web }}px;
          padding-bottom: {{ section.settings.padding_bottom_web }}px;
        }
      }


    .section-{{ section.id }} .box-container {
        max-width: var( --ay-mx-w );
        margin: 0 auto;
    }
    .section-{{ section.id }} {
      display:block;
    }
    .section-{{ section.id }} .des {
      h1,h2,h3,h4,h5,h6 {
      color: var(--ay-des-color)

      }

    }
    as-collection-text .as-collection-heading{font-size:12px;margin-bottom:24px}as-collection-text .as-collection-desc{color:var(--text-color);text-align:justify;font-size:12px;font-style:normal;font-weight:300;line-height:1.4;letter-spacing:.6px;max-width:600px}as-collection-text .as-underline span{color:var(--text-color);font-style:normal;font-weight:500;line-height:1.4;letter-spacing:.9px;display:inline-block;border-bottom-width:1px;border-color:var(--text-color)}as-collection-text .text-container{display:grid;grid-template-columns:repeat(1,minmax(0,1fr));gap:1rem}@media (min-width: 768px){as-collection-text .text-container{grid-template-columns:repeat(2,minmax(0,1fr))}}as-collection-text .text-container{font-size:10px;font-weight:300;line-height:14px;letter-spacing:.5px}as-collection-text .text-container .left-text{grid-column:span 1 / span 1}as-collection-text .text-container .right-text{grid-column:span 1 / span 1}
    as-collection-text .text-container{
      a{
        font-weight: 500;
      }
    }
    as-collection-text .as-collection-heading{
      text-align: left;
    }
    @media (min-width: 700px) {
      /* as-collection-text .as-collection-heading{
        text-align: center;
      }
      as-collection-text .text-container .left-text{
        max-width: 480px;
        margin: 0 auto;
      }
      as-collection-text .text-container .right-text{
        max-width: 480px;
        margin: 0 auto;
      } */
    }
{%- endstyle -%}

<{{ name }}
  class=" section-{{ section.id }}-padding section-{{ section.id }}  section-{{ section.id }}-bg "
  ay-sections
>
  <div class="container container--xl">
    <div class="as-collection-heading  as-underline">
      <span>
        {{ section.settings.heading }}
      </span>
    </div>

    <div class="text-container  ">

      <div class="left-text custom-justify-content">
        {{ section.settings.left_text }}
      </div>
      <div class="right-text custom-justify-content">
        {{ section.settings.right_text }}
      </div>

    </div>

  </div>
</{{ name }}>

{% schema %}
{
  "name": "as-collection-text",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "heading"
    },
    {
      "type": "textarea",
      "id": "left_text",
      "label": "left text"
    },

    {
      "type": "textarea",
      "id": "right_text",
      "label": "right text"
    },

    {
      "type": "header",
      "content": "上边距:"
    },
    {
      "type": "range",
      "id": "padding_top_web",
      "label": "web",
      "min": 0,
      "max": 160,
      "step": 2,
      "unit": "px",
      "default": 160
    },

    {
      "type": "range",
      "id": "padding_top_table",
      "label": "table",
      "min": 0,
      "max": 160,
      "step": 2,
      "unit": "px",
      "default": 128
    },

    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "mobile",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "default": 96
    },
    {
      "type": "header",
      "content": "下边距:"
    },
    {
      "type": "range",
      "id": "padding_bottom_web",
      "label": "web",
      "min": 0,
      "max": 160,
      "step": 2,
      "unit": "px",
      "default": 160
    },

    {
      "type": "range",
      "id": "padding_bottom_table",
      "label": "table",
      "min": 0,
      "max": 160,
      "step": 2,
      "unit": "px",
      "default": 128
    },

    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "mobile",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "default": 96
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色"
    }
  ],

  "presets": [
    {
      "name": "as-collection-text",
      "blocks": []
    }
  ]
}
{% endschema %}
