{% assign sid = section.id %}
<style>
    #shopify-section-{{sid}}{
        {%if section.settings.type == 'padding' %}
            padding-top:{{section.settings.top}};
            padding-bottom:{{section.settings.bottom}};
        {%  else %} 
            margin-top:{{section.settings.top}};
            margin-bottom:{{section.settings.bottom}};
        {%  endif %} 
    } 
    @media (max-width:767px){
        #shopify-section-{{sid}}{
            {%if section.settings.type == 'padding' %}
                padding-top:{{section.settings.top_m}};
                padding-bottom:{{section.settings.bottom_m}};
            {%  else %} 
                margin-top:{{section.settings.toptop_m}};
                margin-bottom:{{section.settings.bottom_m}};
            {%  endif %} 
        }   
    }
</style>
{% schema %}
{
    "name": "Section navigation",
    "class": "custom-section-nav",
    "settings": [
        {
            "type": "select",
            "id": "type",
            "default":"margin",
            "label": "Padding or Margin",
            "options": [
                {
                    "label": "Padding",
                    "value": "padding"
                },
                {
                    "label": "Margin",
                    "value": "margin"
                }
            ]
        },
        {
            "type": "header",
            "content": "Desktop"
        },
        {
          "type": "range",
          "id": "top",
          "label": "Top",
          "max": 200,
          "min": 0,
          "step": 2,
          "default":0
        },
        {
          "type": "range",
          "id": "bottom",
          "label": "Bottom",
          "max": 200,
          "min": 0,
          "step": 2,
          "default":0
        },
        {
            "type": "header",
            "content": "mobile"
        },
        {
          "type": "range",
          "id": "top_m",
          "label": "Top",
          "max": 100,
          "min": 0,
          "step": 1,
          "default":0
        },
        {
          "type": "range",
          "id": "bottom_m",
          "label": "Bottom",
          "max": 100,
          "min": 0,
          "step": 1,
          "default":0
        }
    ],
    "presets": [
        {"name": "Section navigation"}
    ]
}
{% endschema %}