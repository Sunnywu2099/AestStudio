<div id="subscribe-popup" style="display: none; ">
  <div style="display:flex">
    <div class="subscribe-info">
      <div style="padding-bottom:20px;">
        <h2>Discover Your AEST STUIDIOS World</h2>
        <p style="margin-top:10px;">Get Personal Access To Collection Drops，Events，And Exclusive Offers.</p>
      </div>
  {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <div class="newsletter-form__field-wrapper">
                  <div class="field">
                    <input
                      id="NewsletterForm--{{ section.id }}"
                      type="email"
                      name="contact[email]"
                      class="field__input"
                      value="{{ form.email }}"
                      aria-required="true"
                      autocorrect="off"
                      autocapitalize="off"
                      autocomplete="email"
                      {% if form.errors %}
                        autofocus
                        aria-invalid="true"
                        aria-describedby="ContactFooter-error"
                      {% elsif form.posted_successfully? %}
                        aria-describedby="ContactFooter-success"
                      {% endif %}
                      placeholder="Your E-mail"
                      required
                    >
                    
                    <button
                      type="submit"
                      class="button"
                      name="commit"
                    >
                      JOIN OUR LIST
                    </button>
                  </div>
                  {%- if form.errors -%}
                    <small class="newsletter-form__message form__message" id="ContactFooter-error">
                      <span class="svg-wrapper">
                        {{- 'icon-error.svg' | inline_asset_content -}}
                      </span>
                      {{- form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email -}}
                    </small>
                  {%- endif -%}
                </div>
                {%- if form.posted_successfully? -%}
                  <h3
                    class="newsletter-form__message newsletter-form__message--success form__message"
                    id="ContactFooter-success"
                    tabindex="-1"
                    autofocus
                  >
                    <span class="svg-wrapper">
                      {{- 'icon-success.svg' | inline_asset_content -}}
                    </span>
                    You have been subscribed to our newsletter.
                  </h3>
                {%- endif -%}
              {%- endform -%}

    <div style="padding-top:25px;">
      We process your personal data as stated in our Privacy Policy. You may withdraw your consent or manage your preferences at any time by clicking the unsubscribe link at the bottom of any of our marketing emails, or by emailing us at hello@aeststudios.com
    </div>
   
  </div>

    <div class="media">
       <picture>
         <source
                            srcset="https://cdn.shopify.com/s/files/1/0917/7445/1998/files/Layer_0_2400x.png?v=1737923303"
                            media="(max-width: 375px)"
                          >
         <img src="{{ 'https://cdn.shopify.com/s/files/1/0917/7445/1998/files/Layer_0_2400x.png?v=1737923303' }}" alt="{{ alt }}" loading="lazy" width="auto" height="100%">
       </picture>
    </div>
  </div>
  
  
</div>

<style>
  #subscribe-popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #f9f9f9;
  padding: 20px;
  border: 1px solid #ccc;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
  z-index: 9999;
  padding-top:35px;
    padding-right:0px;
}

  

  .subscribe-info{
    width:420px;
  }

  .subscribe-info{
    width:50%;
    padding-right:20px;
  }
   #subscribe-popup .media{
     width:50%;
   }

  @media (max-width: 1000px) {
      #subscribe-popup .media{
       display:none;
     }
    .subscribe-info{
      width:90%
    }
  }

  /* 超小屏幕移动端（宽度小于 576px） */
  @media (max-width: 575px) {
      #subscribe-popup .media{
       display:none;
     }
    .subscribe-info{
    width:90%;
      min-width:310px;
  }
    
  }

   .subscribe-info .button{
    width:100%
  }

#subscribe-popup label {
  display: block;
  margin-bottom: 5px;
}

#subscribe-popup input[type="email"] {
  width: 100%;
  padding: 8px;
  margin-bottom: 10px;
  border:none;
  border-bottom: 1px solid #ccc;
  border-radius: 3px;
}

#subscribe-popup input[type="submit"] {
  background-color: #007bff;
  color: white;
  padding: 8px 15px;
  border: none;
  border-radius: 3px;
  cursor: pointer;
}

#subscribe-popup .close-button {
  position: absolute;
  top: 5px;
  right: 5px;
  background-color: transparent;
  border: none;
  font-size: 18px;
  cursor: pointer;
}
</style>
<script>
  window.addEventListener('load', function () {
  // 显示订阅弹框
  const subscribePopup = document.getElementById('subscribe-popup');
  subscribePopup.style.display = 'block';

  // 关闭弹框
  const closeButton = document.createElement('button');
  closeButton.textContent = 'X';
  closeButton.className = 'close-button';
  closeButton.addEventListener('click', function () {
    subscribePopup.style.display = 'none';
  });
  subscribePopup.appendChild(closeButton);
});
</script>

{% schema %}
  {
    "name": "subscribe-popup",
    "settings": []
  }
{% endschema %}