{% assign sid =  section.id %}
<style>
    #shopify-section-{{sid}} .section-guide{
        background: #fff;
    }
    #shopify-section-{{sid}} .container_inner{
        max-width: 1680px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        --gap:80px;
        gap: var(--gap);
    }
    #shopify-section-{{sid}} .container_inner>.item{
        display: flex;
        gap: var(--gap);
        align-items: center;
    }
    #shopify-section-{{sid}} .container_inner>.item>div{
        width: calc((100% - var(--gap))/2);
    }
    #shopify-section-{{ sid }} .media video,
    #shopify-section-{{ sid }} .media img{
        width:100%;
        height:100%;
        display:block;
        object-fit:cover;
        object-position: center;
    }
    #shopify-section-{{ sid }} .info>h3{
        color: #25282A;
        font-size: 18px;
        font-weight: 500;
        line-height: 1.4; 
        letter-spacing: 0.9px;
        margin-bottom: 24px;
    }
    #shopify-section-{{ sid }} .info>div:not(.guide_table){
        line-height: 1.4; 
        color: #25282A;
        font-size: 12px;
        font-weight: 300;
        letter-spacing: 0.6px;
    }
    #shopify-section-{{ sid }} .info>a{
        color: #FFF;
        font-size: 12px;
        font-weight: 400;
        line-height: 1.4;
        letter-spacing: 0.6px;
        padding: 11px 50px;
        border-radius: 2px;
        background: #25282A;     
        display: inline-block;
        margin-top: var(--gap);   
    }   
    #shopify-section-{{ sid }} .info>.guide_table+a{
        margin: 0;
    }
    #shopify-section-{{ sid }} .info>.guide_table{
        margin: var(--gap) 0;
        overflow-x: auto;
    }
    #shopify-section-{{ sid }} .info>.guide_table>div{
        /* border-bottom: 1px solid rgba(37, 40, 42, 0.50); */
        display: flex;
        --cell_gap:4px;
        gap: var(--cell_gap);   
        position: relative;
        min-width: calc(120px*5 + var(--cell_gap)*4);
    }
    #shopify-section-{{ sid }} .info>.guide_table>div::after{
        content: "";
        width: 100%;
        height: 1px;
        position: absolute;
        left: 0;
        bottom: 0;
        background: rgba(37, 40, 42, 0.50);
        z-index: 1;
        /* min-width: calc(120px*5 + var(--cell_gap)*4); */
    }
    #shopify-section-{{ sid }} .info>.guide_table span{
        line-height: 1.4;
        border: unset;
        padding: 20px 0;
        text-align: center;
        color: #25282A;
        font-size: 10px;
        font-weight: 300;
        letter-spacing: 0.5px;
        display: inline-block;
        width: calc((100% - var(--cell_gap)*4) / 5);
        min-width: 120px;
        flex-shrink: 0;
    }
    #shopify-section-{{ sid }} .info>.guide_table>div:first-child span{
        font-size: 12px;
        color: #25282A;
        font-weight: 400;
        letter-spacing: 0.6px;
        padding-top: 0;
        opacity: 1;
    }
    #shopify-section-{{ sid }} .info>.guide_table>div>span:first-child{
        font-size: 14px;
        color: #25282A;
        text-align: left;
        font-weight: 400;
        letter-spacing: 0.7px;
        position: sticky;
        left: 0;
        background: #ffff;
    }
    @media (max-width:1300px){
        #shopify-section-{{sid}} .container_inner{
            --gap:40px;
        }
        #shopify-section-{{ sid }} .info>h3{
            margin-bottom: 16px;
        }
        #shopify-section-{{ sid }} .info>.guide_table span{
            padding: 10px 0;
        }
    }
    @media (min-width:768px){
        #shopify-section-{{ sid }} .media video.mobile{display:none;}
    }
    @media (max-width:767px){
        #shopify-section-{{ sid }} .media video.desktop{display:none;}
    }
</style>

<div class="section-guide section-spacing">
    <div class="container">
        <div class="container_inner">
            {% for block in section.blocks %}  
                {% liquid 
                    assign bs = block.settings
                    assign reverse = bs.reverse
                    assign type = bs.type
                    assign pc_image = bs.img
                    assign mobile_image = bs.img_m
                    assign alt = bs.img.alt
                    assign pc_video = bs.video
                    assign mobile_video = bs.video_m
                    assign title = bs.title
                    assign content = bs.content
                    assign table = bs.table
                    assign btn = bs.btn
                    assign link = bs.link
                %}
                <div class="item {%if reverse %}reverse{% endif %}">
                    <div class="media">
                        {% if type == 'img' %}
                            {% if pc_image != blank %}
                            <picture>
                                {% if mobile_image != blank %}
                                <source
                                srcset="{{ mobile_image | img_url: '750x' }}"
                                media="(max-width: 375px)"
                                >
                                <source
                                srcset="{{ mobile_image | img_url: '1000x' }}"
                                media="(max-width: 767px)"
                                >
                                {% endif %}
                                <source
                                srcset="{{ pc_image | img_url: '2160x' }}"
                                media="(max-width: 1080px)"
                                >
                                <img src="{{ pc_image | img_url: '2400x' }}" alt="{{ alt }}" loading="lazy" width="auto" height="100%">
                            </picture>
                            {% endif %}
                        {% else %}
                            {% if pc_video != blank %}
                            {{ pc_video | video_tag: autoplay: true, loop: true, muted: true, image_size: 'master', class:"desktop" }}
                            {% endif %}
                            {% if mobile_video != blank %}
                            {{ mobile_video | video_tag: autoplay: true, loop: true, muted: true, image_size: 'master', class:"mobile" }}
                            {% endif %}
                        {% endif %}
                    </div>
                    <div class="info">
                    {% if title != blank %}
                        <h3>{{title}}</h3>
                    {% endif %}
                    {% if content != blank %}
                        <div>{{content}}</div>
                    {% endif %}
                    {% if table != blank %}
                        <div class="guide_table">
                                {% comment %} 第 行 {% endcomment %}
                                <div>
                                    <span></span>
                                    <span>texture of material</span>
                                    <span>size</span>
                                    <span>Shoulder strap length</span>
                                    <span>Opening method</span>
                                </div>
                                <div>
                                    <span>Mini Bags</span>
                                    <span>100% cowhide</span>
                                    <span>30x20x15cm</span>
                                    <span>15cm</span>
                                    <span>Zipper</span>
                                </div>
                                <div>
                                    <span>Xxxxxx Bags</span>
                                    <span>100% cowhide</span>
                                    <span>30x20x15cm</span>
                                    <span>15cm</span>
                                    <span>Zipper</span>
                                </div>
                                <div>
                                    <span>Xxxxxx Bags</span>
                                    <span>100% cowhide</span>
                                    <span>30x20x15cm</span>
                                    <span>15cm</span>
                                    <span>Zipper</span>
                                </div>
                                <div>
                                    <span>Xxxxxx Bags</span>
                                    <span>100% cowhide</span>
                                    <span>30x20x15cm</span>
                                    <span>15cm</span>
                                    <span>Zipper</span>
                                </div>
                                <div>
                                    <span>Xxxxxx Bags</span>
                                    <span>100% cowhide</span>
                                    <span>30x20x15cm</span>
                                    <span>15cm</span>
                                    <span>Zipper</span>
                                </div>
                        </div>
                    {% endif %}
                    {% if btn != blank %}
                        <a class="" href="{{link}}"><span>{{btn}}</span></a>
                    {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

